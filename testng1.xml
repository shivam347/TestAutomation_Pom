<suite name="herokuapp Suite">

    <listeners>
        <listener class-name="herokuapp.listener.ScreenshotListener"/>
    </listeners>


    <test name="heroku chrome test">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="herokuapp.pagestest.FT01_ABTestingTest" />
            <class name="herokuapp.pagestest.FT02_AddRemoveTest" />
            <class name="herokuapp.pagestest.FT03_BasicAuthTest" />
            <class name="herokuapp.pagestest.FT04_BrokenImageTest" />
            <class name="herokuapp.pagestest.FT05_CheckBoxTest" />
            <class name="herokuapp.pagestest.FT06_ContextMenuTest" />
            <class name="herokuapp.pagestest.FT07_DragDropTest" />
            <class name="herokuapp.pagestest.FT08_DropDownTest" />
            <class name="herokuapp.pagestest.FT09_DynamicControlTest" />
            <class name="herokuapp.pagestest.FT10_DynamicLoadingTest" />
            



        </classes>
    </test>

    <test name="heroku Firefox test">
        <parameter name="browser" value="firefox" />
        <classes>

            <class name="herokuapp.pagestest.FT11_EntryAdTest" />
            <class name="herokuapp.pagestest.FT12_TyposTest" />
            <class name="herokuapp.pagestest.FT13_FileUploadTest" />
            <class name="herokuapp.pagestest.FT14_FileDownloadTest" />
            <class name="herokuapp.pagestest.FT15_FloatingMenuTest" />
            <class name="herokuapp.pagestest.FT16_LoginFormTest" />
            <class name="herokuapp.pagestest.FT17_HorizontalSliderTest" />
            <class name="herokuapp.pagestest.FT18_HoversTest" />
            <class name="herokuapp.pagestest.FT19_InfiniteScrollTest" />
            <class name="herokuapp.pagestest.FT20_StatusCodesTest" />

        </classes>

    </test>

</suite>